@model LoginModel;
@{
    Layout = "_LayoutDeslogada";
    ViewData["Title"] = "Login";
}

<form asp-controller="Login" asp-action="Login" method="post">
    <div class="form-group">
        <label for="login">Login</label>
        <input type="text" asp-for="Login" class="form-control" id="login" aria-describedby="emailHelp">
        @Html.ValidationMessageFor(x => x.Login)
    </div>
    <div class="form-group">
        <label for="password">Senha</label>
        <input type="password" asp-for="Senha" class="form-control" id="senha">
        @Html.ValidationMessageFor(x => x.Senha)
    </div>
    <button type="submit" class="btn btn-primary mt-3">Entrar</button>
</form>

